<%= form_with model: @company, data: {turbo: false}, local: true do |f| %>
  <%= render 'shared/errors', resource: @company  %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <h1>Seller information:</h1>

  <%= f.fields_for :sellers do |sellers_form| %>

  <div class="field">
    <%= sellers_form.label :first_name %><br />
    <%= sellers_form.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
  </div>

  <div class="field">
    <%= sellers_form.label :last_name %><br />
    <%= sellers_form.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
  </div>

  <div class="field">
    <%= sellers_form.label :email %><br />
    <%= sellers_form.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

    <div class="field">
      <%= sellers_form.label :password %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= sellers_form.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= sellers_form.label :password_confirmation %><br />
      <%= sellers_form.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

  <% end %>

  <h3><p><%= f.submit %></p></h3>
<% end %>
