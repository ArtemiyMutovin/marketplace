<h2><%= link_to "Create company", new_company_path, class:'btn btn-warning' %></h2>
<h2><%= link_to "Companies list", companies_path, class:'btn btn-primary' %></h2>
<div>
    <table class="products">
      <tr>
        <td>COMPANY</td>
        <td>TITLE</td>
        <td>PRICE</td>
        <td>CATEGORY</td>
        <td>SELLER</td>
      </tr>
      <% @products.each do |product| %>
        <tr>
          <th><%= product.company.name %></th>
          <th><%= product.title %></th>
          <th><%= product.price %>$</th>
          <th><%= product.category.title %></th>
          <th><%= product.seller.first_name %> <%= product.seller.last_name %></th>
          <th><%= button_to 'Buy', buy_product_path(product), class:'btn btn-success'  %></th>
        </tr>
      <% end %>
    </table>
  </div>
